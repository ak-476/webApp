<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title></title>
    <link rel="stylesheet" type="text/css" href="../css/api.css"/>
    <link rel="stylesheet" type="text/css" href="../css/aui.css"/>
    <link rel="stylesheet" href="../css/crsCss.css">
    <style>
        body, html {
            height: 100%;
        }

        html {
            background-image: url(../image/bg.jpg);
            background-repeat: no-repeat;
            background-size: 100% 100%;
            background-attachment:fixed
        }
        body{
            background: none;
        }
        header {
            display: -webkit-box;
        }

        .title {
            -webkit-box-flex: 1;
            text-align: center;
            line-height: 50px;
            font-size: 20px;
        }

        .btn {
            width: 50px;
            height: 50px;
        }

        .cancel {
            background-image: url("../image/ad_close_gray@2x.png");
            background-size: 40px;
            background-repeat: no-repeat no-repeat;
            background-position: center;
        }

        i {
            display: block;
            width: 30px;
            height: 30px;
            background-size: 30px;
            background-repeat: no-repeat no-repeat;
            background-position: center;
        }

        .user {
            background-image: url("../image/login_account@2x.png");
        }

        .password {
            background-image: url("../image/logn_password@2x.png");
        }

        .input-wrap {
            padding: 10px 0;
            display: -webkit-box;
        }

        .input-wrap:first-child {
            border-bottom: 1px solid #d4d4d4;
        }

        .form {
            background-color: rgba(255, 255, 255, 0.8);
            margin: 40px 20px 0 20px;
            border-radius: 8px;
            padding: 0 10px;
            line-height: 30px;
        }

        .input-wrap input {
            display: block;
            -webkit-box-flex: 1;
            background-color: rgba(255, 255, 255, 0);
            outline: none;
            height: 30px;
        }

        .find-pwd {
            text-align: right;
            margin: 40px;
        }

        .button.green {
            background-color: #36b05e;
        }

        .button {
            display: block;
            color: white;
            margin: 0 40px;
            text-align: center;
            border-radius: 8px;
            height: 40px;
            line-height: 40px;
        }

        .button.yellow {
            background-color: #FF7800;
        }

        .margin-top-25 {
            margin-top: 25px;
        }
    </style>
</head>
<body>
<header>
    <div class="btn cancel" tapmode="" onclick="api.closeWin()"></div>
    <div class="title">登陆</div>
    <div class="btn"></div>
</header>
<div id="app">
    <div class="loginIndex">
        <img src="./../image/crsLogo.png" alt="">
        <div class="loginPhone">
            <input v-model="phoneNumber" type="tel" maxlength="11" placeholder="请填写手机号码">
        </div>
        <div class="loginCode">
            <input v-model="codePass" type="tel" maxlength="6" placeholder="请输入验证码">
            <button @click="getCode()" :disabled="noClick">{{ codeNeed }}</button>
        </div>
        <div class="loginBtn">
            <button @click="login()">登录</button>
        </div>
    </div>
</div>


<script src="../script/zepto.js"></script>
<script src="../script/api.js"></script>
<script type="text/javascript" src="../script/lib/vue.min.js"></script>
<script type="text/javascript" src="../script/aui/aui-toast.js"></script>
<script src="../script/aui/aui-dialog.js"></script>
<script type="text/javascript" src="../config.js"></script>
<script type="text/javascript" src="../script/util.js"></script>
<script>
    var vm = new Vue({
        el: '#app',
        data:{
            phoneNumber: '',
            codePass: '',
            noClick: false,
            codeNeed: '点击发动验证码',
            phoneTest: /^1[34578]\d{9}$/
        },
        methods:{
            init: function() {
                var that = this;
                that.phoneNumber = $api.getStorage('phoneNum') || '';
            },
            getCode: function() {
                var that =  this;
//                发送短信验证码
                if(!that.phoneTest.test(that.phoneNumber)){
                    Util.auiShowMsgBox({
                        msg: '手机号码格式不正确',
                        cancelBtn: true
                    }, function (action) {
                        if (action) {
                            alert('save');
                        } else {
                            alert('cancel');
                        }
                    });
                    return;
                }
                Util.post(apiJson.APPLOGIN, {phone: that.phoneNumber}, function(data){
                    $api.setStorage('phoneNum',that.phoneNumber)
                    that.noClick = true;
                    var timeDown = 59;
                    that.codeNeed = '60秒后可重新发送'
                    var times = setInterval(function(){
                        that.codeNeed = timeDown + '秒后可重新发送'
                        timeDown--;
                        if(timeDown == 0){
                            clearInterval(times)
                            that.noClick = false;
                            that.codeNeed = '点击发动验证码'
                        }
                    }, 1000)
                }, function(){

                }, true)
            },
            login: function() {
                Util.post(apiJson.APPMSGLOGIN, {phone: this.phoneNumber, inputCode: this.codePass}, function(data){
                    Util.setLocalStorage('sessionId', data.data.sessionId);
                    setTimeout(function(){
                        api.closeWin();
                    },1000)
                })
            }
        }
    })
    apiready = function () {
        vm.init()
    };
