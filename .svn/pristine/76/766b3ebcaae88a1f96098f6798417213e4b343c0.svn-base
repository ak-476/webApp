//			name: 'homeSearch',
//			url: './html/carRep.html',
//			pageParam: {
//				showBack: true
//            }
//		});
	}

	function openCommon(name, title) {
		api.execScript({
			name: 'root',
			script: 'indexOpenCommon("' + name + '","' + title + '")'
		});
	}

	var indexOpenCommon = function (name, title) {
		api.openWin({
			name: name,
			url: './html/common/' + name + '.html',
			pageParam: {
				name: name,
				title: title
			},
			rect: {
				x: 0,
				y: 0,
				w: 'auto',
				h: 'auto'
			}
		});
	};

	function funIniGroup() {
		var eHeaderLis = $api.domAll('header li'),
			frames = [];
		for (var i = 0, len = eHeaderLis.length; i < len; i++) {
			switch (i) {
				case 0:
					frames.push({
						name: 'home',
						url: './html/home.html',
						bgColor: '#ededed',
						bounces: true
					});
					break;
				case 1:
					frames.push({
						name: 'carRep',
						url: './html/carRep.html',
						bgColor: '#ededed',
						bounces: true
					});
					break;
				case 2:
					frames.push({
						name: 'shop',
						url: Config.resourcePath.hostApp + 'wxauth/userBuying.htm',
//						url: './html/shop.html',
						bgColor: '#ededed',
						bounces: true
					});
					break;
				case 3:
					frames.push({
						name: 'my',
						url: JSON.parse(localStorage.getItem('isLogin')) ? Config.resourcePath.hostWx + 'v2/member/center' : Config.resourcePath.hostWx + 'v2/login',
						//url: './html/my.html',
						bgColor: '#ededed',
						bounces: true
					});
					break;
			}
		}

		api.openFrameGroup({
			name: 'group',
			scrollEnabled: false,
			background: '#ededed',
			rect: {
				x: 0,
				y: $api.dom('header').offsetHeight,
				w: api.winWidth,
				h: $api.dom('#main').offsetHeight - $api.dom('#header').offsetHeight
			},
			index: 0,
			frames: frames
		}, function (ret, err) {
			console.log($api.jsonToStr(ret));
			if (ret.index == 1){
				api.execScript({
//					name: 'group',
					frameName: 'carRep',
					script: 'vm.init();'
				});
            }
		});
	}
